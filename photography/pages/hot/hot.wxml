<!--pages/hot/hot.wxml-->
<view class="top-title">
    <text class="main-title" >热门推荐</text>
    <text></text>
</view>
<swiper previous-margin="30rpx" duration="300" next-margin="30rpx">
    <block wx:for="{{swiperData}}" >
        <swiper-item >
            <view class="swiper-item">
                <image src="{{item.imgUrl}}"  mode='aspectFill' class="slide-image"  />
                <view class="article-info" >
                    <text class="title" >{{item.title}}</text>
                    <text class="discription">{{item.discription}}</text>
                </view>
                <view class="main-view">
                    <image src='../../assets/icons/views.png'></image> {{item.look}}</view>
            </view>
        </swiper-item>
    </block>
</swiper>
<view class="classify">
    <view class="classify-title">街头摄影
        <navigator class="view-all" url=''>查看全部</navigator>
    </view>
    <swiper previous-margin="30rpx" duration="300" next-margin="30rpx" class="article-warp">
        <swiper-item>
          <block wx:for="{{swiperData1}}">
            <navigator hover-class="none" class="article-item" url='{{item.url}}'>
                <image class="article-clover" src='{{item.imgUrl}}'></image>
                <view class="article-info">
                    <text class="article-title">{{item.title}}</text>
                    <text class="article-description">{{item.discription}}</text>
                    <view class="article-view">
                        <image src='../../assets/icons/views_gray.png'></image>{{item.look}}</view>
                </view>
            </navigator>
          </block>
            
        </swiper-item>
        
        <swiper-item>
            <block wx:for="{{swiperData2}}">
            <navigator hover-class="none" class="article-item" url='../article/article/article'>
                <image class="article-clover" src='{{item.imgUrl}}'></image>
                <view class="article-info">
                    <text class="article-title">{{item.title}}</text>
                    <text class="article-description">{{item.discription}}</text>
                    <view class="article-view">
                        <image src='../../assets/icons/views_gray.png'></image>{{item.look}}</view>
                </view>
            </navigator>
          </block>
        </swiper-item>
    </swiper>
</view>
