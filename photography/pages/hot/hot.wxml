        <swiper-item>

            <navigator class="article-item">
                <image class="article-clover" src='https://s1.ax2x.com/2018/06/26/n580p.th.jpg'></image>
                <view class="article-info">
                    <text class="article-title">日用品摄影</text>
                    <text class="article-description">日用</text>
                    <view class="article-view">
                        <image src='../../assets/icons/views_gray.png'></image> 256</view>
                </view>
            </navigator>
            
            <navigator class="article-item" url='../article/video2/article'>
                <image class="article-clover" src='https://s1.ax2x.com/2018/07/19/wF663.th.jpg'></image>
                <view class="article-info">
                    <text class="article-title">装饰摄影</text>
                    <text class="article-description">梵格装饰画</text>
                    <view class="article-view">
                        <image src='../../assets/icons/views_gray.png'></image> 256</view>
